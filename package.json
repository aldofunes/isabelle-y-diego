{
  "name": "main",
  "private": true,
  "scripts": {
    "start": "UNIVERSE_I18N_LOCALES='es, fr' meteor run --settings .deploy/settings.json",
    "build:css": "lessc client/main.less client/main.css --autoprefix='last 2 versions'",
    "deploy": "cd .deploy && mup deploy"
  },
  "dependencies": {
    "forecast.io-bluebird": "0.0.1",
    "jquery": "^2.2.3",
    "less": "^2.6.1",
    "less-plugin-autoprefix": "^1.5.1",
    "mailgun-js": "^0.7.10",
    "markdown": "^0.5.0",
    "markdown-it": "^6.0.2",
    "meteor-node-stubs": "~0.2.0",
    "meteor-react-autoform": "0.0.92",
    "moment": "^2.13.0",
    "moment-timezone": "^0.5.3",
    "react": "^15.0.2",
    "react-addons-pure-render-mixin": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-parallax": "^0.4.3",
    "react-router": "^2.4.0",
    "react-scroll": "^1.0.16",
    "simple-react-form": "^1.2.0",
    "skycons": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.6.1",
    "eslint-plugin-jsx-a11y": "^1.0.4",
    "eslint-plugin-meteor": "^3.5.2",
    "eslint-plugin-react": "^5.0.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/recommended"
    ]
  }
}
